{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row d-flex flex-sm-column flex-lg-row">
            <div class="col-5 pt-5"><h1>Liste des articles</h1></div>
            <div class="col">
                <div class="container-fluid">
                    <div class="row">
                        {% for post in posts %}
                            <div class="post-card col-sm-6 col-xl-4 g-5">
                                <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="post-card-content">
                                    <div class="post-card-title">{{ post.title }}</div>
                                    <div class="post-card-text">{{ post.content|u.truncate(100) }}[...]</div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('app_post_new') }}">Creer un nouvel article</a>
{% endblock %}
